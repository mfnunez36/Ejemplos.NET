
@{
    ViewBag.Title = "Agregar";
}

<section class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h2 class="page-header">AGREGAR PRODUCTO</h2></center>
        </div>
    </div>

    @using (Html.BeginForm("Agregar", "Producto", new { @class = "" }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label">NOMBRE</label>
                <div class="col-md-4">
                    <input type="text" name="Nombre" value="" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">DESCRIPCION</label>
                <div class="col-md-4">
                    <input type="text" name="Descripcion" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">VISIBILIDAD</label>
                <div class="col-md-4">
                    <input type="text" name="Visibilidad" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">PRECIO</label>
                <div class="col-md-4">
                    <input type="text" name="Precio" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">TIPO PRODUCTO</label>
                <div class="col-md-4">
                    <input type="text" name="Tipo_Producto" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">BODEGA</label>
                <div class="col-md-4">
                    <input type="email" name="Bodega" value="" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-primary" type="submit" value="AGREGAR" />
                    <a class="btn btn-default" href="~/Producto">VOLVER</a>
                </div>

            </div>
        </div>
    }
</section>

