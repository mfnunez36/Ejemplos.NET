
@{
    ViewBag.Title = "Editar";
}

<section class="container">
    <center><h2 class="page-header">EDITAR PRODUCTO</h2></center>

    @using (Html.BeginForm("Editar", "Producto", new { @class = "" }))
    {
        <div class="form-horizontal">
            <input type="hidden" name="id" value="ID" />
            <div class="form-group">
                <label class="col-md-2 control-label">NOMBRE</label>
                <div class="col-md-4">
                    <input type="text" name="Nombre" value="Nombre" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">DESCRIPCION</label>
                <div class="col-md-4">
                    <input type="text" name="Descripcion" value="Descripcion" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">VISIBILIDAD</label>
                <div class="col-md-4">
                    <input type="text" name="Visibilidad" value="Visibilidad" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">PRECIO</label>
                <div class="col-md-4">
                    <input type="text" name="Precio" value="Precio" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">TIPO PRODUCTO</label>
                <div class="col-md-4">
                    <input type="Text" name="Tipo_Producto" value="Tipo_Producto" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">BODEGA</label>
                <div class="col-md-4">
                    <input type="Text" name="Bodega" value="Bodega" />
                </div>
            </div>

            

            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-primary" type="submit" value="ACTUALIZAR" />
                    <a class="btn btn-default" href="~/Producto">VOLVER</a>
                </div>
            </div>
        </div>
    }


</section>

