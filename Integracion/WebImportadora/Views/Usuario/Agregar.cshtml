
@{
    ViewBag.Title = "Agregar";
}

<section class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h2 class="page-header">AGREGAR USUARIO</h2></center>
        </div>
    </div>

    @using (Html.BeginForm("Agregar", "Usuario", new { @class = "" }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label">NOMBRE</label>
                <div class="col-md-4">
                    <input type="text" name="Nombre" value="" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">APELLIDO</label>
                <div class="col-md-4">
                    <input type="text" name="Apellido" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">RUT</label>
                <div class="col-md-4">
                    <input type="text" name="Rut" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">FECHA NAC.</label>
                <div class="col-md-4">
                    <input type="text" name="Fecha_nac" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">TELEFONO</label>
                <div class="col-md-4">
                    <input type="text" name="Telefono" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">CORREO</label>
                <div class="col-md-4">
                    <input type="email" name="Correo" value="" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">PASSWORD</label>
                <div class="col-md-4">
                    <input type="password" name="password" value="" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-primary" type="submit" value="AGREGAR" />
                    <a class="btn btn-default" href="~/Usuario">VOLVER</a>
                </div>

            </div>
        </div>
    }
</section>

