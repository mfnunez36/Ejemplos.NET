
@{
    ViewBag.Title = "Editar";
}

<section class="container">
    <center><h2 class="page-header">EDITAR PERFIL</h2></center>

    @using (Html.BeginForm("Editar", "Perfil", new { @class = "" }))
    {
        <div class="form-horizontal">
            <input type="hidden" name="id" value="ID" />
            <div class="form-group">
                <label class="col-md-2 control-label">NOMBRE</label>
                <div class="col-md-4">
                    <input type="text" name="Nombre" value="Nombre" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">TIPO</label>
                <div class="col-md-4">
                    <input type="text" name="Tipo" value="Tipo" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">DESCRIPCION</label>
                <div class="col-md-4">
                    <input type="text" name="Descripcion" value="Descripcion" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">VIGENTE</label>
                <div class="col-md-4">
                    <input type="text" name="Vigente" value="Vigente" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-primary" type="submit" value="ACTUALIZAR" />
                    <a class="btn btn-default" href="~/Perfil">VOLVER</a>
                </div>
            </div>
        </div>
    }


</section>

